@model IEnumerable<PAW.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Field.FieldName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDateAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReadingDuration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Field.FieldName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookContent)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookDateAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReadingDuration)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.BookImage)"
                 class="thumbnail" style="height:48px;width:48px;" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
